<Window x:Class="var1.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главное окно" Height="450" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="254*" />
            <ColumnDefinition Width="249*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="33" />
        </Grid.RowDefinitions>
        <TextBox HorizontalAlignment="Stretch" 
                 Grid.ColumnSpan="2"
                 Margin="10,10,10,90"
                 Name="textBoxContent" 
                 VerticalAlignment="Stretch"
                 VerticalScrollBarVisibility="Auto"
                 />
        <Button Content="Открыть" Grid.Column="0" 
                Name="buttonOpen" 
                HorizontalAlignment="Stretch" 
                Margin="10,316,5,28" 
                Click="buttonOpen_Click" />
        <Button Content="Сохранить" Grid.Column="1" 
                Name="buttonSave" 
                HorizontalAlignment="Stretch"
                Margin="5,316,10,28"
                Click="buttonSave_Click" />
        <Button x:Name="button10" Content="Вернуться в главное меню" HorizontalAlignment="Left" Margin="10,363,0,0" VerticalAlignment="Top" Width="241" Height="46" Click="button10_Click" Grid.RowSpan="2"/>
    </Grid>
</Window>
